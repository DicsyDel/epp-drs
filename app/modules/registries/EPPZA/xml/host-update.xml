<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<epp:epp xmlns:epp="urn:ietf:params:xml:ns:epp-1.0" xmlns:domain="urn:ietf:params:xml:ns:domain-1.0">
<!-- host-update.xml -->
  <epp:command>
    <epp:update>
      <domain:update>
        <domain:name>{name}</domain:name>
        <domain:add>
          <domain:ns>
            <domain:hostAttr>
              <domain:hostName>{hostname}</domain:hostName>
              <domain:hostAddr ip="v4">{ip_new}</domain:hostAddr>
            </domain:hostAttr>
          </domain:ns>
        </domain:add>
      </domain:update>
    </epp:update>
  </epp:command>
</epp:epp>
